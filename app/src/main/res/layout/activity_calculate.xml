<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculate">
    <EditText
        android:id="@+id/et_numberone"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="0.0"
        android:paddingLeft="20dp"
        android:inputType="numberDecimal"
        android:layout_margin="30dp"
        android:textSize="30dp"

        />
    <EditText
        android:id="@+id/et_numbertwo"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/et_numberone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="0.0"
        android:paddingLeft="20dp"
        android:inputType="numberDecimal"
       app:layout_constraintBaseline_toBaselineOf="@id/et_numberone"
        android:layout_margin="30dp"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_numberone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"
        android:textColor="#D50000"
        android:textSize="30dp"
        />
    <GridLayout
        android:id="@+id/gl_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_result"
        android:layout_margin="30dp"
        android:columnCount="2">
        <Button
            android:id="@+id/btn_add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#0091EA"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#0091EA"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn_mul"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="x"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#0091EA"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn_div"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="รท"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#0091EA"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="AC"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#D50000"

            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn_equal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="="
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#0091EA"
            android:layout_margin="10dp"
            />



    </GridLayout>
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gl_math"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:background="@drawable/ic_arrow_forward_black_24dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>